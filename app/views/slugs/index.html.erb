<p id="notice"><%= notice %></p>

<h1>Slugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slugs.each do |slug| %>
      <tr>
        <td><%= slug.name %></td>
        <td><%= slug.img %></td>
        <td><%= link_to 'Show', slug %></td>
        <td><%= link_to 'Edit', edit_slug_path(slug) %></td>
        <td><%= link_to 'Destroy', slug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slug', new_slug_path %>
